#
# wm independent hotkeys
#

# terminal emulator
# super + Return
# 	alacritty
super + Return
	nixGL kitty

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

super + shift + {w,d}
    {google-chrome, discord}

super + ctrl + shift + h
    dunstctl history-pop

super + space
	rofi -show drun -show-icons -theme ~/.config/rofi/spotlight.rasi

super + F4
	rofi -show drun -show-icons -theme ~/.config/rofi/launchpad.rasi

super + F1
	$HOME/.config/bspwm/scripts/wifi.sh

super + F2
	$HOME/.config/bspwm/scripts/rofi-blt.sh

super + F3
	$HOME/.config/bspwm/scripts/select_audio.sh

super + ctrl + l 
      	$HOME/.config/bspwm/scripts/lock.sh

super + shift + {h,j,k,l}
	dir={west,south,north,east}; \
	bspc node -s "$dir.local" --follow \
	    || bspc node -m "$dir" --follow

#
# bspwm hotkeys
#

super + shift + v
    bspc config @splitType horizontal
    bspc call @bspwm-toggle-split

super + v
    bspc config @splitType vertical
    bspc call @bspwm-toggle-split

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}



XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle


# super + shift + Up
#     pactl set-source-volume @DEFAULT_SOURCE@ +5%
# super + shift + Down
#     pactl set-source-volume @DEFAULT_SOURCE@ -5%
# super + shift + m
#     pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Media Control 
super + p
    playerctl next
super + i
    playerctl previous
super + o
    playerctl play-pause

# Brigtness
XF86MonBrightnessUp
    xbacklight -inc 10
XF86MonBrightnessDown
    xbacklight -dec 10


# Screenshot
Print
    $HOME/.config/bspwm/scripts/screenshot.sh all

alt + Print
    $HOME/.config/bspwm/scripts/screenshot.sh area

control + Print
    $HOME/.config/bspwm/scripts/screenshot.sh window

# Suspend
super + shift + s
    notify-send "Suspending" "See you later" && systemctl suspend

super + shift + t 
	polybar-msg cmd toggle

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,ctrl + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + bracket{left,right}
	bspc monitor --focus {prev,next}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} focused:'^{1-9,10}'

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# move/resize
ctrl + alt + shift + {Down,Up}
    bspc node -d {prev,next}.local --to-monitor {prev,next}

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
